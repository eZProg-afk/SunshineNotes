<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/statistics_layout"
    tools:context=".activities.other.StatisticsActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="@color/cardview_dark_background"
        app:cardElevation="4dp"
        app:contentPadding="8dp"
        android:layout_marginStart="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tagTitles2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.skydoves.doublelift.DoubleLiftLayout
                    android:id="@+id/doubleLiftLayout4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="4dp"
                    app:doubleLift_cornerRadius="4dp"
                    app:doubleLift_foldedHeight="10dp"
                    app:doubleLift_foldedWidth="50dp"
                    app:doubleLift_horizontalDuration="250"
                    app:doubleLift_verticalDuration="150">

                    <TextView
                        android:id="@+id/date_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Feature"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </com.skydoves.doublelift.DoubleLiftLayout>

                <com.skydoves.doublelift.DoubleLiftLayout
                    android:id="@+id/doubleLiftLayout5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/purple"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="4dp"
                    app:doubleLift_cornerRadius="4dp"
                    app:doubleLift_foldedHeight="10dp"
                    app:doubleLift_foldedWidth="50dp"
                    app:doubleLift_horizontalDuration="250"
                    app:doubleLift_verticalDuration="150">

                    <TextView
                        android:id="@+id/type_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Request"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </com.skydoves.doublelift.DoubleLiftLayout>

                <com.skydoves.doublelift.DoubleLiftLayout
                    android:id="@+id/doubleLiftLayout6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/light_green"
                    android:paddingLeft="12dp"
                    android:paddingTop="4dp"
                    android:paddingRight="12dp"
                    android:paddingBottom="4dp"
                    app:doubleLift_cornerRadius="4dp"
                    app:doubleLift_foldedHeight="10dp"
                    app:doubleLift_foldedWidth="50dp"
                    app:doubleLift_horizontalDuration="250"
                    app:doubleLift_verticalDuration="150">

                    <TextView
                        android:id="@+id/action_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Android"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </com.skydoves.doublelift.DoubleLiftLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/item_sub_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Remember to look up at the stars"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="LESSON 2"
                android:textColor="@color/white" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>