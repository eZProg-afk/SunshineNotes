<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_height="60dp"
        app:menu="@menu/main_menu"
        app:cornerRadius="@dimen/_16sdp"
        app:backgroundColor="@color/colorDelete"
        app:layout_constraintBottom_toTopOf="@id/layout_quick_actions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemFontFamily="@font/ubuntu_bold"
        app:textSize="12sp"
        app:duration="400"
        app:indicatorColor="@color/back_for_check_label"
        app:textColor="@color/text_black"
        app:activeItem="0"
        app:iconTint="@color/text_black"
        app:iconTintActive="@color/text_black"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp" />

    <LinearLayout
        android:id="@+id/layout_quick_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSearchBackground"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/_15sdp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/icon_remove_ads"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:contentDescription="@string/cd_settings_icon"
            android:src="@drawable/ic_remove_ads"
            app:tint="@color/colorIcons" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>